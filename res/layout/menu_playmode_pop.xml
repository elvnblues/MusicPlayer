<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_menu_playmode"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/pop_win_bg">
        <RadioGroup 
            android:id="@+id/rg_playmode"
            android:layout_width="150dip"
            android:layout_height="150dip"
            android:orientation="vertical"
            android:gravity="center">
            <RadioButton 
	            android:id="@+id/rb_playmode_all"
	            android:layout_width="match_parent"
	            android:layout_height="0dip"
	            android:layout_weight="1"
	            android:button="@null"
	            android:background="@drawable/menu_playmode_rb_bg"
	            android:paddingLeft="15dip"
	            android:drawableLeft="@drawable/playback_playmode_all_button"
	            android:singleLine="true"
	            android:text="@string/playmode_all"
	            android:textSize="18sp"
	            android:checked="true"/>
            <View android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/gray"/>
            <RadioButton 
	            android:id="@+id/rb_playmode_random"
	            android:layout_width="match_parent"
	            android:layout_height="0dip"
	            android:layout_weight="1"
	            android:button="@null"
	            android:background="@drawable/menu_playmode_rb_bg"
	            android:paddingLeft="15dip"
	            android:drawableLeft="@drawable/playback_playmode_random_button"
	            android:singleLine="true"
	            android:text="@string/playmode_random"
	            android:textSize="18sp"/>
            <View android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/gray"/>
            <RadioButton 
	            android:id="@+id/rb_playmode_single"
	            android:layout_width="match_parent"
	            android:layout_height="0dip"
	            android:layout_weight="1"
	            android:button="@null"
	            android:background="@drawable/menu_playmode_rb_bg"
	            android:paddingLeft="15dip"
	            android:drawableLeft="@drawable/playback_playmode_single_button"
	            android:singleLine="true"
	            android:text="@string/playmode_single"
	            android:textSize="18sp"/>
        </RadioGroup>
        
    </LinearLayout>

</LinearLayout>
